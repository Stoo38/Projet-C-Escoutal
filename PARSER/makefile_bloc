CC = g++			#Compilater used
EXEC_NAME = BIN/main		#Name of the executable

all: create_binary_files	

create_binary_files: create_object_files
	$(CC) -o ../TEST/TBloc ../TEST/TBloc.o ../DISPLAY/Display.o OBJ/Bloc.o OBJ/Lexeme.o

create_object_files: clean
	$(CC) -c -o OBJ/Bloc.o SRC/Bloc.cpp
	$(CC) -c -o OBJ/Lexeme.o SRC/Lexeme.cpp
	$(CC) -c -o ../TEST/TBloc.o ../TEST/TBloc.cpp
	$(CC) -c -o ../DISPLAY/Display.o ../DISPLAY/Display.cpp

clean:
	rm -f OBJ/Bloc.o
	rm -f OBJ/Lexeme.o
	rm -f ../DISPLAY/Display.o
	rm -f ../TEST/TBloc.o
	rm -f ../TEST/TBloc

distclean:
